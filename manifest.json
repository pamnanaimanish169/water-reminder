{
  "name": "WaterMinder",
  "description": "Embark on a journey to improved well-being, one refreshing sip at a time.",
  "version": "1.0.1",
  "manifest_version": 3,
  "permissions": [
    "notifications", "alarms", "storage",
    "https://www.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*"
  ],
  "sandbox": {
    "pages": ["https://www.gstatic.com/*"]
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "author": "Manish Pamnani",
  "action": {
    "default_popup": "index.html",
    "default_icon": "./glass-of-water.jpg"
  }
}
