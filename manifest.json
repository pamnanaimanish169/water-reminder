{
  "name": "Water Reminder",
  "description": "This app reminds you to drink a glass of water at specific interval of time.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["notifications", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "author": "Manish Pamnani",
  "action": {
    "default_popup": "index.html",
    "default_icon": "./glass-of-water.svg"
  }
}
